    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:5000",
            "reAttach": true,
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "http://localhost:5000",
                    "path": "${workspaceFolder}/ultrasonics/"
                }
            ]
        },
        {
            "name": "Python: app.py",
            "type": "python",
            "request": "launch",
            "program": "app.py",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": [
                "Python: app.py",
                "Launch localhost"
            ],
        }
    ]
}